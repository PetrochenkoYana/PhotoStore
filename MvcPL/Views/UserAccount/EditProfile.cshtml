@model MvcPL.Models.UserViewModel
<style>
    .btn-block:hover {
        background: #104E8B;
    }

    .btn-block {
        background: #4682B4;
    }
</style>

<div class="modal-content" style="width: 450px">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Profile information</h4>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-body">
                        @using (Html.BeginForm("EditProfile", "UserAccount"))
                        {
                            <input type="hidden" name="UserId" value="@Model.UserId"/>
                            <div class="form-group">
                                <label class="control-label col-sm-4">Firstname</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.FirstName)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">Lastname</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.LastName)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">Username</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">Personal Infrormation</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.PersonalInformation)
                                </div>
                            </div>
                            <p></p>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-7">
                                    <button type="submit" class="btn btn-info btn-block">Save</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
