@model IEnumerable<MvcPL.Models.UserViewModel>
    @{
        ViewBag.Title = "SearchResult";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <head>
        @Styles.Render("~/Content/css")
        <style>
            .white {
                color: #f5f5f5;
            }
        </style>
    </head>

    <div id="wrapper">
        <h2>SearchResult</h2>
        <p> </p>
        @foreach (var user in Model)
        {
            <div class="row">
                <div class="col-md-2" style="text-align: center">
                    <a href=@Url.Action("UserPage", "UserAccount", new {id=user.UserId})>
                        <img src="@user.AccountImage" height="100" alt="" />
                    </a>
                </div>
                <div class="col-md-1">
                    <p class="white">@user.UserName</p>
                    <p class="text-muted">
                        @user.FirstName @user.LastName
                    </p>
                </div>
            </div>
        }
    </div>
